    <body>
        {{> navbarsPartials}}
        <div class = "container">
            <a href="/environment">
                <div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
                      background-size: 100% auto ;
                      padding-bottom: 0px;">
                <div class="col-xs-8" style = "max-height: 125px">
                  <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
                    <i class="fa fa-arrow-left fa-2x whiteicon"></i>
                    <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> BACK TO ENVIRONMENTS
                     <p style = "text-align: left; padding-top: 0px; margin-top: 0px; font-size: 10px">Going Back </p></span>
                   
                  
                  </div>
                </div>
              </div>
            </a>

            <div class="row row-bottom-margin" style = "margin-bottom: 0px;margin-top:3%; background-color: #151515;
                      background-size: 100% auto ;
                      padding-bottom: 0px;">
                <div class="" style = "">
                    <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
                        <span style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:center; font-size: 25px; color: #ffffff; font-family: Verdana"> Update<br>
                        </span>
                        <br>
                
                        <form style = "margin-left: 10px; padding-bottom: 0px; padding-bottom: 0px; margin-bottom: 0px; text-align:left; font-size: 25px; color: #ffffff; font-family: Verdana" id="/addingEnv" action="/EdittingEnv/{{tempEnv.idnum}}">
                        <div class = "form-group">
                            <label class = "form-label" style="width:auto;" for="name"> Name of Environment </label>
                            <textarea style="width:70%; height:30px; overflow:hidden" id="name" name="name" placeholder={{tempEnv.Environment}}>{{tempEnv.Environment}}</textarea>
                        </div>
                        <div class = "form-group">

                            <label class = "form-label" or="equip">Select Gear</label>
                            <select id="equip" name="equip"  data-native-menu="false">
                                {{#each equipment}}
                                    {{#compare tempEnv.name name}}
                                        <option value='{{name}}' selected="selected">{{name}}</option>
                                    {{else}}
                                        <option value='{{name}}'>{{name}}</option>
                                    {{/compare}}
                                {{/each}}
                            </select>
                        </div>
                        <div class = "form-group">
                            <!-- IMPLEMENT SOUND TESTER INSTEAD-->
                            <label class = "form-label" for="points">Environment Noise Level</label><br>
                            <i class="fa fa-volume-down fa-2x"></i>
                            <input style="width:50%" type="range" name="points" id="points" value="{{tempEnv.soundValue}}" min="0" max="100" data-highlight="true" onchange="updateTextInput(this.value);">
                            <i class="fa fa-volume-up fa-2x"></i>
                            <input style="width:15%" type="text" id="displaypoints" value="{{tempEnv.soundValue}}">
                        </div>
                        <div class = "form-group">
                            <label class = "form-label" style="width:auto;" for="place"> Type of Place </label>


                            <select id="place" name="place" data-native-menu="false">
                                {{#each places}}
                                    {{#compare tempEnv.location location}}
                                        <option value='{{location}}' selected="selected">{{location}}</option>
                                    {{else}}
                                        <option value='{{location}}'>{{location}}</option>
                                    {{/compare}}
                                {{/each}}
                                
                            </select>
                        </div>
                    
                            
                            
                            <input type="submit" class="btn btn-default"  name = 'button' value="EDIT ENVIRONMENT">
                            <input type="submit" class="btn btn-default"  name ='button' value="DELETE">
                        </form>
                        
                    
                    </div>
                  
                </div>
                    
            </div>
        </div>
     
    </body>
    <script type="text/javascript">
      $("#environment-nav").addClass("active");
      $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Environment</a>");
    </script>
</html>