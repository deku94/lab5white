<!doctype html>

<html>
    <head>
        <title>Community</title>	
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
        <script src="/js/bootstrap.js" type="text/javascript"></script>
        <script src="/js/community_page.js" type="text/javascript"></script>
        <link rel="stylesheet" href="css/hci-friends.css">
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/bootstrap-theme.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->   
        <style>
            .row-bottom-margin {
                margin-bottom: 5px !important;
                padding-bottom: 5px !important;
            }
            .box {
                padding: 0 5px 0 5px;
            }
            .inner {
                width: 50%;
            
                margin: 0 auto; 
            }
        </style>     
    </head>

    <body>
        {{> navbarsPartials}}
        <div class = "container" >
        {{#each communities}}
            <a href="{{url}}" id="link-{{@index}}" data-name="{{name}}">
                <div class="row row-bottom-margin" style = "margin-bottom: 0px; background-color: #E0E0E0;
                background-size: 100% auto ;
                padding-bottom: 0px;">
                    <div class="col-xs-12" style = "max-height: 125px">
                        <div style = "padding-top: 5%; padding-bottom: 15%" >
                            <i class="fa fa-desktop fa-2x whiteicon"></i>
                            <span class="box-title">{{name}}
                            <p class="box-subtitle">{{desc}}</p></span>
                        </div>
                    </div>
                </div>
            </a>
        {{/each}}
        </div>
    </body>
    <script type="text/javascript">
    $("#community-nav").addClass("active");
    $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Community</a>");
    </script>
</html>
