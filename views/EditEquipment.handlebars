<body>
	{{> navbarsPartials}}
	<div class = "container">
		<a href="/equipment">
			<div class="row row-bottom-margin" >
		    <div class="col-xs-12">
		      <div> <!--Changed padding top to 2 and paddint bottom to 15-->
		        <i class="fa fa-arrow-left fa-2x whiteicon"></i>
		        <span class = "box-title" style="font-size:20px"> back to my equipment</span>
		       
		      
		      </div>
		    </div>
		  </div>
		</a>

		<div class="row row-bottom-margin">
		      <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
		        <span class = "box-title"> Edit Equipment<br>
		        </span>
		        <br>
	        
		      <form style = "padding-left: 10px" id="AddingEquip" action="/EdittingEquipment/{{tempEquip.idnum}}">
	      		<div class="form-group">
			    	<label class = "form-label" for="name"> Name of Equipment </label>
			    	<textarea style="width:70%; height:30px; overflow:hidden" id="name" name="name" placeholder="{{tempEquip.name}}">{{tempEquip.name}}</textarea>
		    	
		    	</div>
		    	<div class="form-group">
		    		<span>
		    			<label class = "form-label" for="type"> Type of Equipment </label>
		    			<br>
		    			<select name="type" id="type" data-native-menu="false">
  							<option value="{{tempEquip.type}}" selected='selected'>{{tempEquip.type}}</option>
  							<option value="open-end"> open-end</option>
  							<option value="closed-end"> closed-end</option>
  							<option value="in-ear"> in-ear</option>
  							<option value="Bluetooth-speaker"> Bluetooth-speaker</option>
  							<option value="soundsystem"> soundsystem</option>
  							<option value="pc speakers"> pc speakers</option>
						</select>
		    		</span>	
		      	</div>
		      	<div class="form-group">
		      		<span>
			    		<label class = "form-label" for="usage"> Usage </label>
			    		<br>
				    	<select name="usage" id="usage" data-native-menu="false">
				    		<option value="{{tempEquip.usage}}" selected='selected'>{{tempEquip.usage}}</option>
				    		<option value="gaming"> Gaming</option>
				    		<option value="music"> Music</option>
				    		<option value="gaming/music"> Gaming/Music</option>
			        	</select>

			  		</span>
			  	</div>
		      		<input type="submit" class="btn btn-default"  name ='button' value="EDIT EQUIPMENT">
		      		<input type="submit" class="btn btn-default"  name ='button' value="DELETE">
		      	</form>
		      
		    </div>
			    
		  </div>
	</div>
	
</body>
