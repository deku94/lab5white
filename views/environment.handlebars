<!doctype html>

<html>
<head>
	<title>My Environment</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
	<script src="/js/bootstrap.js" type="text/javascript"></script>
	
	<link rel="stylesheet" href="/css/hci-friends.css">
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	{{> navbarsPartials}}
  <div class = "container" >


    {{#each environment}}
    <div class="row row-bottom-margin listing" style = "background-color: #E0E0E0;">
      <div class="col-xs-8" style = "max-height: 125px">
        <div style = "padding-top: 2%; padding-bottom: 15%" > <!--Changed padding top to 2 and paddint bottom to 15-->
          <i class="fa fa-{{type}} fa-2x whiteicon"></i>
          <span class = "box-title"> {{name}}
           <p class = "box-subtitle">{{equipment}} - {{noise}} </p></span>    
        </div>


      </div>
      <i id="dir" class="fa fa-sort-desc fa-2x whiteicon" style="float:right;margin-right:4%"></i>
    </div>
    <div class='row row-bottom-margin row-bottom-margin-hidden' id='{{equipment}}'>
      <div style = "max-height: 125px; padding-left: 10px">
        <div class = "col-cust-padding" > <!--Changed padding top to 2 and paddint bottom to 15-->
          <i class="fa fa-{{type}} fa-2x whiteicon"></i>
          <span class = "box-title"> Equipment for {{name}}
           <p class = "box-subtitle"></p></span>
         
        
        </div>
      </div>
     <a href="/environment/edit/{{idnum}}" style="color:#ffffff"><span style="float:right;margin-right:4%"><i id="{{idnum}}Edit" class="fa fa-pencil fa-2x whiteicon"></i>EDIT ENVIRONMENT</span></a> 
    </div>
    {{/each}}
    <a href="/addEnv">
      <div class="row row-bottom-margin">
        <center><i class="fa fa-plus-circle fa-2x whiteicon "></i></center>
        
      </div>
    </a>  
    	
  	
  </div>
</body>
<script type="text/javascript">
  $("#environment-nav").addClass("active");
  $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Environment</a>");
</script>
<script src="/js/JSEnvironment.js" type="text/javascript"></script>
</html>
