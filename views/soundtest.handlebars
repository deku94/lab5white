<!doctype html>
<html>
	<head>
        <title>Sound Test</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <script src="/js/jquery-1.11.0.js" type="text/javascript"></script>
        <script src="/js/bootstrap.js" type="text/javascript"></script>
	    <script src="/js/volume-meter.js" type="text/javascript"></script>
        <script src="/js/soundtest_page.js" type="text/javascript"></script>
        <link rel="stylesheet" href="css/hci-friends.css">
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/bootstrap-theme.css">
	</head>	
	<body>
        {{> navbarsPartials}}
		
		<div class="container">
            <div>
                <form id="environment"  action="/environment/pickEnv">
                    <h4>Current Environment</h4>
                    <select name="environment">
                        <option value='New'>New</option>
                        {{#each environment}}
                            <option value='{{name}}'>{{name}}</option>
                        {{/each}}
                    </select>
                    <input id="submitBtn" type="submit" class="btn btn-primary btn-lg" id="save-results" value="Save to Environment"></input>
                </form>
            </div>
            <div style="padding-top: 10%">
                <i class="fa fa-volume-up fa-5x"></i>
                <button type="button" class="btn btn-primary btn-lg" id="sound-test" style="margin-left:5%; vertical-align:75%">Test Noise Level</button>
            </div>
            <div id="meter-div" hidden="hidden">
                    <canvas id="meter" width="500" height="50"></canvas>
            </div>
            <div id="test-result-div" hidden="hidden">
                <h4>Results</h4>
                <div id="test-details">
                </div>
            </div>
         </div>
	</body>	
    <script type="text/javascript">
        $("#soundtest-nav").addClass("active");
        $("nav div.container-fluid div.navbar-header").append("<a class='navbar-brand' style = 'font-family: Arial' href='#'>Sound Test</a>");
    </script>
</html>